{
  "manifest_version": 3,
  "name": "Cleaker.me",
  "version": "1.0",
  "description": "Cool stuff with cleaker.me",
  "icons": {
    "48": "./assets/imgs/icon.png"
  },
  "background": {
    "service_worker": "./assets/js/background.js"
  },
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "gui/bundle/index.html",
    "default_icon": {
      "48": "./assets/imgs/icon.png"
    }
  },
  "web_accessible_resources": [
      {
        "resources": ["script.js", "style.css"],
        "matches": ["<all_urls>"],
        "extension_ids": ["*"]
      }
    ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./assets/js/content.js"]
    }
  ]
}
